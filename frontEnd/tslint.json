{
	"defaultSeverity": "error",
	"extends": [
		"tslint:latest",
		"tslint-react",
		"tslint-eslint-rules",
		"tslint-config-alloy",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": ["**/node_modules/**"]
	},
	"rules": {
		"trailing-comma": [
			true,
			{
				"multiline": {
					"singleline": "never",
					"objects": "always",
					"arrays": "always",
					"functions": "always",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"no-implicit-dependencies": [false],
		"type-literal-delimiter": false,
		"no-magic-numbers":false
	}
}
